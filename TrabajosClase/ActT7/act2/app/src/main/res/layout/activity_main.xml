<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E6653C">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actividad_de_preferencias"
        android:layout_gravity="center"
        android:paddingBottom="55dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/definir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#999696"
        android:text="@string/definir_preferencias"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/recuperar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#999696"
        android:text="RECUPERAR PREFERENCIAS"
        android:textColor="@color/black"
        android:textSize="16dp"/>

</LinearLayout>