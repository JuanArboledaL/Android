<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Primera AplicaciÃ³n Android"
        android:textSize="40sp"
        android:typeface="sans"
        android:textColor="#ff0000"
        android:textStyle="bold|italic"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce los siguientes datos"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0B28FF"
        android:layout_marginTop="10sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#EA9CEAFB">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/nombre"
                android:hint="Introduce el nombre"
                android:maxLength="40"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#EA9CEAFB">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clave"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingRight="50dp"/>

            <EditText
                android:id="@+id/contra"
                android:inputType="textPassword"
                android:hint="Introduce la clave"
                android:maxLength="12"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESETEAR"
        android:layout_gravity="right"/>
</LinearLayout>