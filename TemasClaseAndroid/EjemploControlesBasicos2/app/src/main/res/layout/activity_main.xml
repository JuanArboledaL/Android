<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Spinner que carga los comentarios desde java-->
    <Spinner
        android:id="@+id/miSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Spinner que carga los datos desde el xml-->

    <Spinner
        android:id="@+id/miSpinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/valores"/>

    <!--______________________________-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ff00"/>

    <TextView
        android:id="@+id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/miCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsa opciÃ³n"
        android:checked="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ff00"/>

    <!--____________________________________-->

    <RadioGroup
        android:id="@+id/grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcion 1"/>

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opcion 2"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ff00"/>

    <Switch
        android:id="@+id/miSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--______________________________________________-->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ff00"/>

    <RatingBar
        android:id="@+id/miRiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="7"
        android:rating="2.0"
        android:stepSize="1.0"/>

    <!--______________________________________________-->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ff00"/>

    <SeekBar
        android:id="@+id/miSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="60"
        android:progress="0"
        android:min="0"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E60808"
        android:textSize="40dp"
        android:text="Transparencia"/>

    <!--______________________________________________-->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00ff00"/>

    <ProgressBar
        android:id="@+id/miProsgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"/>

    <ProgressBar
        android:id="@+id/miProsgressBarLineal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="true"/>


</LinearLayout>